@page "/login"

<style>
    .app {
        border-radius: 50%;
        background: linear-gradient(to right, lightcyan, darkviolet);
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        color: white;
        font-size: 24px;
        padding: 20px;
    }

    #scrollable {
        height: 200%;
    }

    .center {
        text-align: center;
    }


    button {
        background-color: cyan;
        border-radius: 15px;
        padding: 10px 20px;
        border: none;
        cursor: pointer;
        font-size: 16px;
        margin: 5px;
    }


    .google-button,
    .apple-button {
        padding: 12px 20px;
        font-size: 16px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        color: #fff;
        font-weight: bold;
        text-transform: uppercase;
    }

    .signup {
        background-color: orange;
    }

    .microsoft-button {
        background-color: cyan;
    }

    .google-button {
        background-color: red;
    }

    .apple-button {
        background-color: #000;
    }

        .google-button:hover,
        .apple-button:hover {
            opacity: 0.8;
        }

    #page-content {
        padding: 12px 20px;
        font-size: 16px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        color: #fff;
        font-weight: bold;
        text-transform: uppercase;
    }
</style>
<div class="app">
    <div id="page-content">
        <p style="color:violet;">Sign in</p>
        <button class="microsoft-button">Microsoft</button>
        <button class="google-button" data-onsuccess="onSignIn">Google</button>
        <button class="apple-button">Apple</button><br />
        <button id="toggle-button" style="background-color: lightgrey;">Email login</button>
        <p style="color:violet;"> or</p>
        <button class="signup">Signup</button>
    </div>
</div>
